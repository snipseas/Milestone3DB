@{
    ViewData["Title"] = "Rehash Passwords";
}

<h2>Rehash Passwords</h2>

<p>Click the button below to rehash all user passwords.</p>

<form asp-action="RehashPasswords" method="get">
    <button type="submit" class="btn btn-primary">Rehash Passwords</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">
        @ViewData["Message"]
    </div>
}
<a asp-action="RehashPasswords" class="btn btn-warning">Rehash All Passwords</a>